{% extends 'base.html.twig' %}

{% block title %}Manage Products{% endblock %}

{% block body %}
    <div class="bg-dark m-b-30">
        <div class="container">
            <div class="row p-b-60 p-t-60">

                <div class="col-md-8 m-auto text-white p-b-30">

                    <h1>Manage Products</h1>
                    <p class="opacity-75">
                        Manage products in the system...
                    </p>
                </div>
                <div class="col-md-4 m-auto text-white p-b-30">
                    <div class="text-md-right">
                        <a href="/manage/products/create" class="btn btn-success"> <i class="mdi mdi-plus"></i> Add New Product</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="pull-up">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="card m-b-30">
                        <div class="card-header">

                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover align-td-middle">
                                    <thead>
                                        <tr>
                                            <th>Preview</th>
                                            <th>SKU</th>
                                            <th>Name</th>
                                            <th>Category</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for product in products %}
                                            <tr>
                                                <td>
                                                    <div class="avatar avatar-sm ">
                                                        <img src="/uploads/brochures/{{ product.preview }}" class="avatar-img avatar-sm rounded-circle" alt=""/>
                                                    </div>
                                                </td>
                                                <td>{{ product.id }}</td>
                                                <td>{{ product.name }}</td>
                                                <td>-</td>
                                                <td>
                                                    <a href="/manage/products/{{ product.id }}/edit" class="btn btn-sm btn-primary">
                                                        Edit
                                                    </a>
                                                    <a href="/manage/products/{{ product.id }}/delete" class="btn btn-sm btn-danger">
                                                        Delete
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
