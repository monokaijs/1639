{% extends 'base.html.twig' %}

{% block title %}Manage Products{% endblock %}

{% block body %}
<div class="bg-dark m-b-30">
    <div class="container">
        <div class="row p-b-60 p-t-60">

            <div class="col-md-12 m-auto text-white p-b-30">

                <h1>Manage Users</h1>
                <p class="opacity-75">
                    Manage users in the system...
                </p>
            </div>

        </div>
    </div>
</div>
<div class="pull-up">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-header">

                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-td-middle">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Full Name</th>
                                    <th>Email</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for user in users %}
                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.fullName }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>
                                        <a href="/manage/users/{{ user.id }}/edit" class="btn btn-sm btn-primary">
                                            Edit
                                        </a>
                                        <a href="/manage/users/{{ user.id }}/delete" class="btn btn-sm btn-danger">
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
{% endblock %}
