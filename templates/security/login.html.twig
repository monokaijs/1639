{% extends 'auth.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <main class="admin-main">
        <div class="container-fluid">
            <div class="row ">
                <div class="col-lg-4  bg-white">
                    <div class="row align-items-center m-h-100">
                        <div class="mx-auto col-md-8">
                            <form class="needs-validation" action="#" method="POST">
                                <div class="p-b-20 text-center">
                                    <p>
                                        <img src="/assets/img/logo.svg" width="80" alt="">
                                    </p>
                                </div>
                                <h3 class="text-center p-b-20 fw-400">Register</h3>
                                <div class="form-row">
                                    <div class="form-group floating-label col-md-12">
                                        <label for="inputEmail">Email</label>
                                        <input name="email" value="{{ last_username }}" id="inputEmail" type="email" required class="form-control" placeholder="Email">
                                    </div>
                                    <div class="form-group floating-label col-md-12">
                                        <label for="inputPassword">Password</label>
                                        <input name="password" id="inputPassword" type="password" required class="form-control" placeholder="Password" >
                                    </div>
                                </div>
                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}"
                                >
                                <input type="hidden" name="_target_path" value="{{ path('homepage') }}" />
                                <button type="submit" class="btn btn-primary btn-block btn-lg">Login</button>
                            </form>
                            <p class="text-right p-t-10">
                                <a href="/register" class="text-underline">Need an account?</a>
                            </p>
                        </div>

                    </div>
                </div>
                <div class="col-lg-8 d-none d-md-block bg-cover" style="background-image: url('/assets/img/auth.svg');">

                </div>
            </div>
        </div>
    </main>
{% endblock %}
